                                                </div>
                                                <div class="modal-body">
                                                    <form action="{{ path('poll_answers_receive') }}" method="post">
                                                        <input type="text" name="email" required style="width: 100%;">
                                                        <input type="hidden" id="finalid" name="radio" value="0">
                                                        <input type="submit" name="submit" value="Submit" class="btn btn-secondary">
                                                    </form>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {#model#}
                                <a href="javascript:void(0)" id="test" class="color button small margin_0 btnmodel" style="" data-toggle="modal" data-target="#myModal">Submit</a>
                            </div>
                            <div class="clearfix"></div>
                        </div>
