                        <div class="clearfix"></div>
                        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
                        <div class="question-desc">
                            <div class="poll_2">
                                <form class="form-style form-style-3">
                                    <div class="form-inputs clearfix">
                                        {% for item in Answers %}
                                            <p style="background-color:{{ item.color }}; padding:10px 20px;">
                                                <input type="radio" id="{{ item.id }}" name="answer" value="{{ item.id }}">
                                                <label for="{{ item.id }}">{{ item.ans }}</label>
                                            </p>
                                        {% endfor %}
                                    </div>
                                </form>
                                <script>
                                    $(document).ready(function() {
                                            if($('input[name=answer]:checked').length<=0)
                                            {
                                                document.getElementById("test").disabled = true;
                                            }
                                            $("input[type='radio']").click(function () {
                                                var radioValue = $("input[name='answer']:checked").val();
                                                if (radioValue) {
                                                    alert("Your Selected " + radioValue);
                                                    $('#finalid').val(radioValue);
                                                    document.getElementById("test").disabled = false;
                                                }
                                            });
                                    });
                                </script>
                                {#model#}
                                <div class="container">
                                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                        <div class="modal-dialog modal-sm" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
